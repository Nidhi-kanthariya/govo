//- sidebar
-var sidebar = true;

//- feather
-var feather= true;

//- fontawesome
-var fontAwesome=true;

//- custom select
-var customSelect = true;

//- ecommerce
-var ecommerce = true;

//- swiper-slider
-var swiper=true;

//- filepond
-var filepond = true;

//- customizer 
-var customizer = true;

//- Breadcrumbs
-var pageTitle="Add Product";
-var breadcrumb=['Ecommerce','Add Product'];

//- all JSON  
include ../../data/all-data

//- all mixin   
include ../../mixin/mixin

doctype html
html(lang='en')
    include ../../layout/header-files
    body(dir="ltr" class="unique-skin")
        main.page-wrapper
            div.page-body-wrapper(class="mb-10 2xl:w-full 4xl:w-[calc(100%_-_14.375rem)] w-[calc(100%_-_15.8125rem)] ml-auto transition-all duration-300")
                include ../../layout/header/unique/header     
                // Sidebar Start 
                div.page-sidebar.sidebar-dark.unique-sidebar
                    include ../../layout/sidebar/unique 
                // Sidebar End 

                // Page Body Start
                div.page-body 
                    div.grid.grid-cols-12.gap-4.add-product.card
                        div.col-span-8(class="lg:col-span-12 lg:border-none lg:pr-0 rtl:lg:pl-0 border-r border-border-light pr-4 rtl:border-l rtl:pl-4 rtl:pr-unset")
                            div 
                                form(action="index.html" class="theme-form flex flex-col gap-4 m-0")
                                    div 
                                        label(for="productName") Product Name
                                        input(type="text" id="productName" value="Women's Latest Bags" required)
                                    div 
                                        label(for="description") Product Description 
                                        textarea(placeholder="A bag that holds your entire universe!" class="p-[11px] focus:!border-border-light").w-full.border.border-border-light.rounded-5.text-xs.text-content
                                    div.grid.grid-cols-12.gap-5
                                        div.col-span-6(class="2md:col-span-6 sm:col-span-12")
                                            label(for="category") Category
                                            select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px]' id="category" aria-label='Default select example')
                                                option(selected='') Applications
                                                option(value='1') Grocery
                                                option(value='2') Fashion
                                                option(value='3') Electronics
                                                option(value='4') Furniture
                                                option(value='5') Watch
                                                option(value='6') Kitchen
                                                option(value='7') Beauty & Personal Care
                                        div.col-span-6(class="2md:col-span-6 sm:col-span-12")
                                            label(for="brand") Brand
                                            select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px]' id="brand" aria-label='Default select example')
                                                option(selected='') Dior
                                                option(value='1') Gucci
                                                option(value='2') louis vuitton
                                                option(value='3') Campus 
                                                option(value='4') Adidas
                                                option(value='5') Puma
                                                option(value='6') Nike
                                    div.grid.grid-cols-12.gap-5
                                        div.col-span-4(class="2md:col-span-6 sm:col-span-12")
                                            label(for="gender") Gender
                                            select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px]' id="gender" aria-label='Default select example')
                                                option(selected='') Female
                                                option(value='1') Male 
                                                option(value='2') All
                                        div.col-span-4(class="2md:col-span-6 sm:col-span-12")
                                            label(for="qty") Quantity
                                            input(type="text" id="qty" placeholder="Enter product quantity.." required)                                            
                                        div.col-span-4(class="2md:col-span-6 sm:col-span-12")
                                            label(for="price") Price 
                                            div.flex.items-center
                                                span.flex.items-center.justify-center.bg-gray-light.text-title.border.border-border-light.rounded-5.rounded-br-none.rounded-tr-none.font-medium.text-xs(class="!leading-snug py-[12px] px-[11px]") $
                                                input(type="text" id="price" placeholder="300" class="p-[11px]").w-full.rounded-5.border.border-border-light.text-xs.text-content(class="!rounded-bl-none !rounded-tl-none")                                       
                                    div.grid.grid-cols-12.gap-5 
                                        div.col-span-6(class="2md:col-span-6 sm:col-span-12")
                                            label(for="tax") Tax
                                            select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px]' id="tax" aria-label='Default select example')
                                                option(selected='') Choose Tax
                                                option(value='1') 2% 
                                                option(value='2') 3%
                                        div.col-span-6(class="2md:col-span-6 sm:col-span-12")
                                            label(for="discount") Discount
                                            div.flex.items-center
                                                span.flex.items-center.justify-center.bg-gray-light.text-title.border.border-border-light.rounded-5.rounded-br-none.rounded-tr-none.font-medium.text-xs(class="!leading-snug py-[12px] px-[11px]") %
                                                input(type="text" id="discount" placeholder="10" class="p-[11px]").w-full.rounded-5.border.border-border-light.text-xs.text-content(class="!rounded-bl-none !rounded-tl-none")
                                    div
                                        label(for="productImage") Product Images
                                        input(type="file" class="show-preview" id="productImage")
                                    
                        div.col-span-4
                            form(action="index.html" class="theme-form flex flex-col gap-4 m-0")
                                div 
                                    label(for="productTag") Product Tags
                                    div.border.border-border-light(class=" rounded-5 w-full p-[11px] text-xs font-semibold text-title flex gap-2")
                                        span.font-semibold.bg-primary.flex.items-center.gap-2.px-2.py-1.rounded-3xl(class="!w-fit !text-3xs !text-white !leading-none")
                                            |   leather
                                            i(data-feather="x", class="w-3 h-3 stroke-white alert-del cursor-pointer")
                                        input(type="text" id="productTag" class="!border-none !p-0" required)
                                div 
                                    label(for="productShortDescription") Product Short Description 
                                    textarea(placeholder="Enter Short description for product.." row="3" id="productShortDescription" class="p-[11px] focus:!border-border-light").w-full.border.border-border-light.rounded-5.text-xs.text-content
                                    
                                div 
                                    label(for="manufactureName") Manufacturer Name
                                    input(type="text" id="manufactureName" placeholder="Enter manufacture name.." required)
                                div 
                                    label(for="manufacturerBrand") Manufacturer Brand 
                                    input(type="text" id="manufacturerBrand" placeholder="Enter manufacture brand.." required)
                                div 
                                    label(for="description") Additional 
                                    textarea(placeholder="Enter product description.." row="3" id="description" class="p-[11px] focus:!border-border-light").w-full.border.border-border-light.rounded-5.text-xs.text-content
                                    



                    // Page Body End  
                    +footer("sm:flex-col flex sm:gap-1 gap-2 items-center justify-between py-[1.1875rem] shadow-footer bg-white px-body-space mt-card-gap")
            include ../../components/customizer 
    include ../../layout/footer-files



    

                  