        main.page-wrapper
            div.page-body-wrapper(class="mb-10 2xl:w-full 4xl:w-[calc(100%_-_14.375rem)] w-[calc(100%_-_15.8125rem)] ml-auto transition-all duration-300")
                include ../../layout/header/unique/header     
                // Sidebar Start 
                div.page-sidebar.sidebar-dark.unique-sidebar
                    include ../../layout/sidebar/unique 
                // Sidebar End 

                // Page Body Start
                div.page-body 
                    div.grid.grid-cols-12.gap-card-gap.card.checkout-detail 
                        div.col-span-8(class="lg:col-span-12 w-full tabs flex flex-col")
                            div.mb-1.tab-links.flex.items-center(class="3sm:justify-center")
