                                                        option(value='1') India
                                                        option(value='2') South Korea
                                                        option(value='3') Canada
                                                        option(value='3') USA
                                                        option(value='3') UAE
                                                        option(value='3') UK
                                                div.col-span-4
                                                    label(for="state") State
                                                    input(type="text" id="state" required)
                                                div.col-span-4
                                                    label(for="postcode") Postcode
                                                    input(type="text" id="postcode" required)
                                            div.flex.items-center.gap-2
                                                label.checkbox.checkbox-sm.cursor-pointer(class="!mb-0")  
                                                    input(type='checkbox' class="peer") 
                                                    div.checkbox-indicator(class="peer-checked:!bg-primary !border-primary")  
                                                        i(data-feather="check")
                                                p(class="!my-0") Remember me for next time
                                            div 
                                                label(for="otherNotes") Other Notes 
                                                textarea(placeholder="Enter the address.." row="3" id="otherNotes" class="p-[11px]").w-full.border.border-border-light.rounded-5.text-xs.text-content
                                            div.flex.justify-between.items-center
                                                button.btn.bg-secondary.text-xs.text-white.flex.items-center.gap-2(class="!w-fit" type='button') 
                                                    i(data-feather="arrow-left" class="w-4 h-4 stroke-white")
                                                    |  Return to Shopping Cart
                                                button.btn.btn-primary.text-xs.text-white.flex.items-center.gap-2(class="!w-fit" type='button') 
                                                    |  Proceed to Next
                                                    i(data-feather="truck" class="w-4 h-4 stroke-white")

                                            


                                div(data-tabContent="2" class="tab-pan fade group relative first:rounded-tl-none rounded-5 border-none !px-1 !pb-0")
