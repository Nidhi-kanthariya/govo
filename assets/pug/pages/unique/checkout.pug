                                                    input(type="text" id="firstName" required)
                                                div.col-span-6
                                                    label(for="lastName") Last Name
                                                    input(type="text" id="lastName" required)
                                            div.grid.grid-cols-12.gap-5
                                                div.col-span-6
                                                    label(for="number") Phone No
                                                    input(type="Number" id="number" maxlength="10" pattern="\d{10}" class="rounded"  required)
                                                div.col-span-6
                                                    label(for="email") Email
                                                    input(type="email" id="email" required)
                                            div 
                                                label(for="address") Address 
                                                textarea(placeholder="Enter the address.." row="3" id="address" class="p-[11px]").w-full.border.border-border-light.rounded-5.text-xs.text-content
                                            div.grid.grid-cols-12.gap-5
                                                div.col-span-4
                                                    label(for="country") Country
