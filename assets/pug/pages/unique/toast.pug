//- sidebar
-var sidebar = true;

//- feathet
-var feather= true;

//- customSelect
-var customSelect= true;

//- customizer
-var customizer=true;

//- prism
-var prism=true;

//- toast
-var toast=true;

//- Breadcrumbs
-var pageTitle="Toast";
-var breadcrumb=['Bonus Ui','Toast'];

//- json
include ../../data/all-data

//- mixin
include ../../mixin/mixin

doctype html
html(lang='en')  
   include ../../layout/header-files 
   body(dir="ltr" class="unique-skin")
      main.page-wrapper
         div.page-body-wrapper(class="mb-10 2xl:w-full 4xl:w-[calc(100%_-_14.375rem)] w-[calc(100%_-_15.8125rem)] ml-auto transition-all duration-300")
            include ../../layout/header/unique/header     
            // Sidebar Start 
            div.page-sidebar.sidebar-dark.unique-sidebar
               include ../../layout/sidebar/unique
            // Sidebar End 

            // Page Body Start 
            div.page-body
               div.grid.grid-cols-12.gap-card-gap
                  div.col-span-4(class="xl:col-span-6 2md:col-span-12")
                     div.card.tabs
                        div.card-header.pb-2.header-bottom-border
                           div.flex.flex-col
                              h3.text-lg.font-bold Toast
                              p You can use toast to notify something.
                              div.preview-code.tab-links
                                 button.p-0.tab.tab-lifted.tab-active(data-tabFilter="1" class="tab-link") Preview  
                                 button.p-0.tab.tab-lifted(data-tabFilter="2" class="tab-link tab-2") Html
                        div.card-body                                   
                           div.tabs-content
                              div(data-tabContent="1" class="tab-pan active show first:rounded-tl-none rounded-5")
                                 div.flex.flex-col.gap-2
                                    div.toast-menu
                                       div.relative.bg-primary-light.border-l-4.border-primary.rounded.p-6.shadow-lg.flex.gap-3.items-center.justify-left(role="alert")
                                          div.rounded-full.h-12.w-12.bg-primary
                                             +SVG_ICON("Danger","w-[48px] h-[42px] stroke-white")
                                          div.flex.flex-col.justify-left.items-left.text-title 
                                             p.text-base.font-bold Not Safe 
                                             p This website in not secure for your document.
                                          div.absolute.top-2.right-2.cursor-pointer
                                             +SVG_ICON("Close-Square","w-[25px] h-[25px] stroke-title")

                              div(data-tabContent="2" class="relative tab-pan copyParent group first:rounded-tl-none rounded-5")
                                 button.btn.copyBtn 
                                    i(data-feather="clipboard")
                                 pre(class="overflow-auto language-html custom-scroll")
                                    code
                                       |&lt;div class="flex flex-wrap gap-2"&gt;
                                       |   &lt;div class="relative bg-primary-light border-l-4 border-primary rounded p-6 shadow-lg 
                                       |                  flex gap-3 items-center justify-left" role="alert"&gt;
                                       |       &lt;div class="w-12 h-12 rounded-full bg-primary"&gt;
                                       |           +SVG_ICON("Danger","w-[48px] h-[42px] stroke-white")
                                       |       &lt;/div&gt; 
                                       |       &lt;div class="flex flex-col justify-left items-left text-title"&gt;
                                       |           &lt;p class="text-base font-bold"&gt; Not Safe &lt;/p&gt;
                                       |           &lt;p&gt; This website in not secure for your document. &lt;/p&gt;
                                       |       &lt;/div&gt;
                                       |       &lt;div class="absolute cursor-pointer top-2 right-2"&gt;
                                       |           +SVG_ICON("Close-Square","w-[25px] h-[25px] stroke-title")
                                       |       &lt;/div&gt;
                                       |   &lt;/div&gt; 
                                       |&lt;/div&gt;

                  div.col-span-4(class="xl:col-span-6 2md:col-span-12")
                     div.card.tabs
                        div.card-header.pb-2.header-bottom-border
                           div.flex.flex-col
                              h3.text-lg.font-bold Toast Default
                              p You can use toast to notify something.
                              div.preview-code.tab-links
                                 button.p-0.tab.tab-lifted.tab-active(data-tabFilter="1" class="tab-link") Preview  
                                 button.p-0.tab.tab-lifted(data-tabFilter="2" class="tab-link tab-2") Html
                        div.card-body                                   
                           div.tabs-content
                              div(data-tabContent="1" class="tab-pan active show first:rounded-tl-none rounded-5")
                                 div.flex.flex-wrap.gap-2
                                    div.toast
                                       button.btn.btn-success.text-white Inputs 
                                       div.toast-menu.toast-default
                                          div.relative.bg-primary-light.border-l-4.border-primary.rounded.p-6.shadow-lg.flex.gap-3.items-center.justify-left(role="alert")
                                             div.rounded-full.h-12.w-12.bg-primary
                                                +SVG_ICON("Danger","w-[48px] h-[42px] stroke-white")
                                             div.flex.flex-col.justify-left.items-left.text-title 
                                                p.text-base.font-bold Not Safe 
                                                p This website in not secure for your document.
                                             div.absolute.top-2.right-2.cursor-pointer(id="toast-close")
                                                +SVG_ICON("Close-Square","w-[25px] h-[25px] stroke-title")
                              div(data-tabContent="2" class="relative tab-pan copyParent group first:rounded-tl-none rounded-5")
                                 button.btn.copyBtn 
                                    i(data-feather="clipboard")
                                 pre(class="overflow-auto language-html custom-scroll")
                                    code
                                       |&lt;div class="flex flex-wrap gap-2 2md:justify-center"&gt;
                                       |   &lt;div class="mask mask-trapezoid-1"&gt;
                                       |       &lt;img src="../../image.jpg" alt="avatar"/&gt;
                                       |   &lt;/div&gt; 
                                       |&lt;/div&gt;



            // Page Body End 
            +footer("sm:flex-col flex sm:gap-1 gap-2 items-center justify-between py-[1.1875rem] shadow-footer bg-white px-body-space mt-card-gap")
      include ../../components/customizer

   include ../../layout/footer-files
