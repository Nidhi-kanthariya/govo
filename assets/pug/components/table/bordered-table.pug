table.table.table-bordered
    thead
        tr
            each head in BORDERED_TABLE.header
                th(class="border border-border-light")=head
    tbody
        each bodyData,index in BORDERED_TABLE.body
            tr
                td(class="min-w-[.625rem]  rounded border border-border-light")=index+1
                td(class="min-w-[.625rem] rounded  border border-border-light")=bodyData.task
                td(class="min-w-[1.25rem] rounded  border border-border-light")=bodyData.status
                td(class="min-w-[.625rem]  rounded border border-border-light")=bodyData.priority