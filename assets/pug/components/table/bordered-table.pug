table.table.table-bordered
  thead
    tr
      each head in BORDERED_TABLE.header
        th(class="border border-border-light dark:border-border-dark")=head
  tbody
    each bodyData,index in BORDERED_TABLE.body
      tr
        td(class="min-w-[.625rem]  rounded border border-border-light dark:border-border-dark")=index+1
        td(class="min-w-[.625rem] rounded  border border-border-light dark:border-border-dark")=bodyData.name
        td(class="min-w-[1.25rem] rounded  border border-border-light dark:border-border-dark")=bodyData.job
        td(class="min-w-[.625rem]  rounded border border-border-light dark:border-border-dark")=bodyData.favoriteColor