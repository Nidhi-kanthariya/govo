mixin widget4(data)
  div(class="grid grid-cols-12 p-4")
    div(class="col-span-7 5xl:col-span-8 2xl:col-span-7 2lg:col-span-8 3sm:col-span-8")
      div.flex.items-center(class="gap-[9px] 2xl:flex-col 2xl:items-start ")
        div(class="p-[13px] 6xl:p-[10px] 5xl:p-[8px] rounded-full relative")
          div(class=`bg-${data.status} opacity-25 absolute z-[1] inset-0 rounded-full`) 
          svg(class=`strong-hover-shake fill-${data.status} 2xl:w-[20px] 2xl:h-[20px] 3xl:w-[18px] 3xl:h-[18px] lg:w-[18px] lg:h-[18px] 2sm:w-4 2sm:h-4 6xl:w-4 6xl:h-4 w-5 h-5 relative z-[2]`)  
            use(href=`../../../assets/svg/bold_sprite.svg#${data.icon}`)
        div 
          h5(class="text-base font-bold text-content3 5xl:text-sm  2xl:text-3xs xl:text-base")= data.title
          h2(class="text-2xl font-extrabold text-title 5xl:text-sm 2xl:text-3xs xl:text-base")= data.profit
    div(class="block col-span-5 5xl:col-span-4 2xl:col-span-5 2lg:col-span-4 3sm:col-span-4")
      if(data.chart)
        div(id=`${data.chart}`)
      if(data.progress)
        .progress.progress-striped.active(class="mb-[38px] mt-[22px]")
          .progress-bar.progress-bar-warning(role='progressbar ', style=`width: ${data.progress}%;`)

  div.card-footer.border-t.border-border-light
    div.flex.items-center(class="p-4 gap-2 3xl:gap-[6px]") 
      div.relative.flex.items-center.justify-center(class="p-[6px]") 
        div(class=`absolute inset-0 rounded-full bg-${data.gros > 50 ? "success" : "danger" } opacity-20`) 
        +SVG_ICON("Fill-Arrow",`${data.gros > 50 ? "fill-success stroke-success -scale-y-100" : "fill-danger stroke-danger" } 5xl:w-[5px] 5xl:h-[5px] w-[7px] h-[7px]`)
      p(class="text-xs font-semibold 3xl:text-2xs text-content 3xl:flex 3xl:items-center 3xl:gap-2 6xl:flex 6xl:items-center 6xl:gap-2") 
        strong(class=`text-${data.gros > 50 ? "success" : "danger" } font-semibold`)= `${data.gros > 50 ? "+" : "-" }${data.gros}% ` 
        span.text-xs.text-content3(class="font-semibold 6xl:line-clamp-1 5xl:line-clamp-1")= data.data
