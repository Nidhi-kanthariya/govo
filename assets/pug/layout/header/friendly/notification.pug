


// Notification Start 
div.dropdown
   div.indicator.flex
      span.indicator-item.badge.bg-success(class="p-0 right-[4px] top-0 border-[2px] border-white w-[8px] h-[8px] rounded-full")
      +SVG_ICON("Notification","w-6 h-6 5xl:w-5 5xl:h-5  stroke-white")

   div.dropdown-menu(class="!min-w-[280px]") 
      div.flex.items-center.justify-between(class="pb-[15px] border-b border-border-light") 
         h4(class="text-base font-bold text-title") Notification
         button(class="text-primary text-3xs font-medium") 
            | Mark All As Read 
      div.search-box.relative.mt-5
         input(class="bg-gray-light border border-border-light w-full py-[8px] pl-[15px] pr-[30px] rounded-5 text-xs font-medium text-title" placeholder="Type to Search..." type="search")       
         +SVG_ICON("Search","w-4 h-4 stroke-title top-1/2 -translate-y-1/2 right-[15px] absolute")     
      ul(class="mt-5 flex flex-col max-h-[232px] overflow-auto custom-scroll px-2") 
         each chat in NOTIFICATION
            li.flex.items-center.gap-3(class="py-3 px-2 last:border-b-0 border-b border-border-light transition-all duration-300 hover:bg-gray-light rounded-5")
               a.flex.items-center(href="./chat.html" class="gap-[12px]")
                  div.rounded-full(class="relative ")
                     img(class="rounded-full min-w-[2.25rem] min-h-[2.25rem] w-full h-auto object-cover" src=`../../assets/images/avatar/${chat.avatar}` alt=`${chat.name}`) 
                     div.indicator(class=`absolute border-[2px] border-white top-[-2px] right-[-2px] w-3 h-3 rounded-full bg-${chat.status}`)
                  div
                     h4(class="line-clamp-1 text-xs font-semibold text-title" )= chat.name
                     p(class="line-clamp-1 text-xs font-semibold text-content")= chat.subTitle
               div(class="flex items-end flex-col gap-1 ml-auto")
                  span(class="text-3xs font-normal text-content")= chat.time
                  if (chat.status !== "danger") 
                     span(class="rounded-full badge text-4xs bg-primary leading-none text-white")= chat.notif
// Notification End 



