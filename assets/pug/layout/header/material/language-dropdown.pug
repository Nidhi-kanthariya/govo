// Language Start 
div.language-select(class="dropdown group")
  button#language-select.flex.items-center(class="max-w-[87px] sm:justify-end min-w-[87px] 2lg:gap-[8px] gap-[11px]")
    img(class="w-[35px] 2xl:w-[30px] h-auto" src="../../assets/images/flag/en.svg" alt="flag") 
    span.flex.items-center.gap-1(class="text-lg 2lg:text-base font-bold text-white")
      | En
    +SVG_ICON("Fill-Arrow","w-[6px] h-[4px] fill-white stroke-white group-hover:rotate-180 duration-300 transition-all")
  ul.language-menu.dropdown-menu.flex.flex-col.gap-3(class="!min-w-[145px]")
    li.language-option.flex.items-center.gap-2(data-value="En" class="cursor-pointer") 
      img(class="w-[32px] h-auto" src="../../assets/images/flag/en.svg" alt="flag")
      span.flex.items-center.gap-1(class="text-xs font-bold hover:text-primary duration-300 transition-all") 
        | English
    li.language-option.flex.items-center.gap-2(data-value="Fr" class="cursor-pointer") 
      img(class="w-[32px] h-auto" src="../../assets/images/flag/fr.svg" alt="flag")
      span.flex.items-center.gap-1(class="text-xs font-bold hover:text-primary duration-300 transition-all") 
        | French
    li.language-option.flex.items-center.gap-2(data-value="Es" class="cursor-pointer") 
      img(class="w-[32px] h-auto" src="../../assets/images/flag/es.svg" alt="flag")
      span.flex.items-center.gap-1(class="text-xs font-bold hover:text-primary duration-300 transition-all") 
        | Spanich
    li.language-option.flex.items-center.gap-2(data-value="Ar" class="cursor-pointer") 
      img(class="w-[32px] h-auto" src="../../assets/images/flag/sa.svg" alt="flag")
      span.flex.items-center.gap-1(class="text-xs font-bold hover:text-primary duration-300 transition-all") 
        | Arabic
// Language End 