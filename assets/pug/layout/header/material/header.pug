// Page Header start
header
   div.page-header(class="ml-auto transition-all px-body-space2  bg-header-dark shadow-header h-[300px] xl:h-[255px] 2lg:h-[240px] sm:h-[190px] 3sm:h-[170px]")
      div(class="justify-between py-[47px] xl:py-[35px] 2lg:xl:py-[30px] flex items-center gap-[52px] 4xl:gap-[35px] sm:gap-[10px]")
         div.left-header(class="flex items-center gap-[15px] flex-1")
            div(class="flex items-center gap-2")
               div.logo-wrapper
                  a(href="index.html") 
                     img(class="w-[calc(55px_+_(85_-_55)_*_((100vw_-_320px)_/_(1920_-_320)))] " src="../../assets/images/logo/logo-w.png" alt="logo")
               button.sidebar-toggle(class="!flex")
                  +SVG_ICON("Category","w-6 4xl:w-5 h-6 4xl:h-5 stroke-white") 
            div.search-box-wrapper(class="transition-all duration-300 xl:px-body-space2 xl:bg-header-dark xl:scale-0 xl:opacity-0 xl:invisible xl:max-w-full xl:w-full xl:z-[5] flex-1 xl:absolute xl:left-0 w-full max-w-[480px] 3xl:max-w-[370px] rounded-5 overflow-hidden text-white") 
               div.search-box.relative(class="xl:rounded-5 bg-white-light")
                  input(class="bg-transparent w-full py-[11px] pl-[25px] pr-[55px] text-xs font-semibold text-white placeholder:text-white" placeholder="Type to Search..." type="search")       
                  +SVG_ICON("Search","xl:hidden w-6 h-6 5xl:w-5 5xl:h-5 stroke-white top-1/2 -translate-y-1/2 right-[25px] absolute")
                  i(data-feather="x" class="search-close hidden cursor-pointer xl:block w-[calc(18px_+_(24_-_18)_*_((100vw_-_320px)_/_(1920_-_320)))] h-[calc(18px_+_(24_-_18)_*_((100vw_-_320px)_/_(1920_-_320)))] stroke-white top-1/2 -translate-y-1/2 right-[25px] absolute")
         div.right-header.flex.items-center(class="gap-[30px] 2sm:gap-0 sm:gap-2 2xl:gap-[24px] ")


            div.icon-menu.ml-auto
               ul.flex.items.center(class="gap-[15px] 2xl:gap-[10px] 2sm:gap-[6px]") 
                  li(class="2sm:p-0 2sm:bg-transparent hidden xl:flex items-center justify-center  px-[14px] py-[9px]  2xl:px-[12px] 2xl:py-[7px] 2lg:px-[10px] bg-white-light rounded-5")
                     button.search-show
                        +SVG_ICON("Search","w-6 h-6 3xl:w-5 3xl:h-5 2lg:w-[18px] 2lg:h-[18px] stroke-white")
                  li(class="2sm:p-0 2sm:bg-transparent flex items-center justify-center px-[14px] py-[9px] 2xl:px-[12px] 2xl:py-[7px] 2lg:px-[10px] bg-white-light rounded-5")  
                     include ./notification
                  li(class="2sm:p-0 2sm:bg-transparent flex items-center justify-center px-[14px] py-[9px] 2xl:px-[12px] 2xl:py-[7px] 2lg:px-[10px] bg-white-light rounded-5")
                     +SVG_ICON("Star","w-6 h-6 3xl:w-5 3xl:h-5 2lg:w-[18px] 2lg:h-[18px] stroke-white")
                  li(class="2sm:p-0 2sm:bg-transparent 2md:hidden flex items-center justify-center px-[14px] py-[9px] 2xl:px-[12px] 2xl:py-[7px] 2lg:px-[10px] bg-white-light rounded-5")
                     include ./message
                  li(class="2sm:p-0 2sm:bg-transparent 2md:hidden flex items-center justify-center px-[14px] py-[9px] 2xl:px-[12px] 2xl:py-[7px] 2lg:px-[10px] bg-white-light rounded-5")
                     include ./cart
                  li(class="2sm:p-0 2sm:bg-transparent flex customizer-btn items-center justify-center px-[14px] py-[9px] 2xl:px-[12px] 2xl:py-[7px] 2lg:px-[10px] bg-white-light rounded-5")
                     +SVG_ICON("Setting","w-6 h-6 3xl:w-5 3xl:h-5 2lg:w-[18px] 2lg:h-[18px] cursor-pointer transition-all duration-300 group-hover:stroke-primary stroke-white")
            ul.profile-box.flex.items-center
               li(class="pr-[11px]  sm:pr-0 2lg:pr-2 sm:border-none last:pr-0 last:border-none border-r border-white-light flex items-center") 
                  include ./language-dropdown      
               li(class="sm:hidden  pl-[11px] 2lg:pl-2 first:pl-0 flex items-center") 
                  include ./profile-box   
      include ./sub-header    
// Page Header end