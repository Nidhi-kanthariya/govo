
// Message Start 
div.dropdown 
   div.indicator.flex
      span.indicator-item.bg-danger.badge(class="p-0 right-[4px] top-0 border-[2px] border-white w-[8px] h-[8px] rounded-full")
      +SVG_ICON("Message","w-[calc(18px_+_(24_-_18)_*_((100vw_-_320px)_/_(1920_-_320)))] h-[calc(18px_+_(24_-_18)_*_((100vw_-_320px)_/_(1920_-_320)))] stroke-title")

   div.dropdown-menu(class="!min-w-[280px]")
      div.flex.items-center.justify-between(class="pb-[15px] border-b border-border-light") 
         h4(class="text-base font-bold text-title") Notification
         div.badge(class="bg-primary text-white text-3xs leading-none rounded-full") 25
      ul(class="mt-[15px] flex flex-col max-h-[232px] overflow-auto custom-scroll px-2") 
         each message in MESSAGE_LIST
            li.flex.items-center.gap-3(class="py-3 px-2 last:border-b-0 border-b border-border-light transition-all duration-300 hover:bg-gray-light rounded-5")
               a.flex.items-center(href="./message.html" class="gap-[12px]")
                  div.rounded-full(class=`relative shadow-lg bg-${message.status} flex items-center justify-center rounded-full p-2`)
                     +SVG_ICON(`${message.icon}`,"w-5 h-5 stroke-white")                         
                  div
                     h4(class="line-clamp-1 text-xs font-semibold text-title" )= message.name
                     p(class="line-clamp-1 text-xs font-semibold text-content")= message.subTitle
// Message End 

